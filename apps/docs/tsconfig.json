{
  "extends": "@pims-frontend/config-typescript/nextjs.json",
  "compilerOptions": {
    "plugins": [
      { 
        "name": "next" 
      }
    ],
    "paths": {
      "@pims-frontend/docs/*": ["./src/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx", "../admin/src/lib/features/project/search-project.tsx",
  ],
  "exclude": ["node_modules"]
}
